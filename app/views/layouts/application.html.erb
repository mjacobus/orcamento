<!DOCTYPE html>
<html>
	<head>
		<title>Orcamento</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>

		<div id="content">
			<div id="menu">
				<%= menu %>
			</div>
			
			<% flash.each do |name, msg| %>
				<%= content_tag :div, msg, :id => "flash#{name}" %>
			<% end %>

			<div id="view">
				<%= yield %>
			</div>
		</div>
	</body>
</html>
