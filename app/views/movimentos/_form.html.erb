<%= form_for(@movimento) do |f| %>
  <% if @movimento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movimento.errors.count, "erro") + (@movimento.errors.count > 1 ? " ocorreu".pluralize : " ocorreu") %>:</h2>

      <ul>
      <% @movimento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
    <%= f.label :usuario %><br />
    <%= f.collection_select(:usuario_id,Usuario.order(:nome),:id,:nome, {:prompt => true}) %>
  </div>
  <div class="field">
    <%= f.label :tipo %><br />
    <%= f.select :tipo, {'despesa' => -1, 'receita' => 1} %>
  </div>
  <div class="field">
    <%= f.label :descricao %><br />
    <%= f.text_field :descricao %>
  </div>
  <div class="field">
    <%= f.label :valor %><br />
    <%= f.text_field :valor %>
  </div>
<!-- 
  <div class="field">
    <%= f.label :valor_corrigido %><br />
    <%= f.text_field :valor_corrigido %>
  </div>
-->
  <div class="field">
    <%= f.label :data_prevista %><br />
    <%= f.date_select :data_prevista %>
  </div>
  <div class="field">
    <%= f.label :data_realizacao %><br />
    <%= f.date_select :data_realizacao, :include_blank => true%>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
