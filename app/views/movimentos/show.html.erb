<p>
  <b>Quem:</b>
  <%= @movimento.usuario.nome %>
</p>

<p>
  <b>Tipo:</b>
  <%= @movimento.tipo > 0 ? 'Receita' : 'Despesa' %>
</p>

<p>
  <b>Valor:</b>
  <%= number_to_currency @movimento.valor %>
</p>

<!-- 
<p>
  <b>Valor corrigido:</b>
  <%= @movimento.valor_corrigido %>
</p>
-->

<p>
  <b>Previsto para:</b>
  <%= to_date @movimento.data_prevista %>
</p>

<p>
  <b>Realizado em:</b>
  <%= to_date @movimento.data_realizacao %>
</p>

<p>
  <b>Descrição:</b>
  <%= @movimento.descricao %>
</p>


<%= link_to 'Alterar', edit_movimento_path(@movimento) %> |
<%= link_to 'Voltar', movimentos_path %> |
<%= link_to 'Novo', new_movimento_path %>
