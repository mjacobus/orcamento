<p id="notice"><%= notice %></p>

<p>
  <b>Quem:</b>
  <%= @movimento.usuario.nome %>
</p>

<p>
  <b>Tipo:</b>
  <%= @movimento.tipo > 0 ? 'Receita' : 'Despesa' %>
</p>

<p>
  <b>Valor:</b>
  <%= to_currency @movimento.valor %>
</p>

<!-- 
<p>
  <b>Valor corrigido:</b>
  <%= @movimento.valor_corrigido %>
</p>
-->

<p>
  <b>Previsto para:</b>
  <%= to_date @movimento.data_prevista %>
</p>

<p>
  <b>Realizado em:</b>
  <%= to_date @movimento.data_realizacao %>
</p>

<p>
  <b>Descricao:</b>
  <%= @movimento.descricao %>
</p>


<%= link_to 'Edit', edit_movimento_path(@movimento) %> |
